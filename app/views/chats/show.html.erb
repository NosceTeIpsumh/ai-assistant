<h1>SuperCarbo </h1>

<div id="messages">
  <% @chat.messages.each do |message| %>
    <% if message.role == "you" %>
      <div class="d-flex justify-content-end mb-2">
        <div class="bg-white px-3 pb-0 pt-3 rounded-pill">
          <%= message.content %>
        </div>
      </div>
    <% elsif message.role == "SuperCarbo" %>
      <div class="d-flex justify-content-start mb-5">
        <div class="px-3 pb-0 pt-3">
          <%= message.content %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
<div id="new_message_container">
  <%= simple_form_for [@chat, @message] do |f| %>
    <%= f.input :content, label: "Ask a question", required: true, placeholder: "How can I help you?", innerHTML: { class: "muted-text"} %>
    <%= f.button :submit, 'Ask LLM', class: 'btn btn-primary' %>
  <% end %>
</div>
