<div class="container py-5" style="margin-bottom: 2rem">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-sm rounded-5 p-4">
        <div class="text-center mb-4">
          <img src="https://via.placeholder.com/150" alt="Avatar" class="rounded-circle shadow-sm mb-3" width="120">
          <h2 class="fw-bold text-primary"> <%=current_user.username.capitalize%></h2>
          <p class="text-muted"> <%=current_user.email%></p>
        </div>

        <ul class="list-group list-group-flush">
          <li class="list-group-item">Discussions avec le bot : <strong><%= current_user.chats.count %></strong></li>
          <li class="list-group-item">CarboDucts ajoutés : <strong><%= current_user.items.count %></strong></li>
        </ul>

        <div class="d-grid gap-3 mt-5">
          <%= link_to "Mes recettes", recipes_path, class: "btn btn-primary btn-lg rounded-5" %>
          <%= link_to "Mes Carboducts", items_path, class: "btn btn-primary btn-lg rounded-5" %>
          <%= link_to "Mes Carbo-chats", chats_path, class: "btn btn-primary btn-lg rounded-5" %>
          <%= link_to "Se déconnecter", destroy_user_session_path, data: {turbo_method: :delete}, class: "btn btn-danger btn-lg rounded-5" %>
        </div>
      </div>
    </div>
  </div>
</div>
